<div id="desc_page">	
	<div class="row">
		<div class="col-xs-12">
			<img id="bigimg" src="<%= $bigImage %>" width="100%"  data-image="1" />
			<div id="imgswitch">
				<div class="left" id="<%= $img_total %>">
				</div>
				<div class="right" id="<%= $img_total %>">
				</div>
			</div>
			<div id="multiimages" class="col-xs-12">	
				<% x = 0 %>
				<% @images.each do |i| %>
					<img src="<%= i %>" width="10%" class="<%= x += 1 %>">
				<%end%>
			</div>
		</div>
		<div class="col-xs-12 ">
			<h1 ><%=h $title.html_safe %></h1>
			<p id="price">$<%= $price %></p>
		</div>
	</div>
	<div class="panel panel-default">
	    <div class="panel-heading">
	      <h3 class="panel-title">Description</h3> 
	    </div>
	    <div class="panel-body">
	     <p><%= $description.html_safe %></p>
	    </div>
	</div>
	<div id="view_etsy">
		<%= link_to "View on Etsy", $link, :target => "_blank" %>
	</div>
	<div id="Random" >
		Random Product
	</div>
</div>

<script type="text/javascript">
	$("#Random").click(function(){
		location.reload()
	})
	$('h3').click(function(){
		$('.panel-body').slideToggle()
	})
	
	$('#multiimages').children('img').click(function(){
		current = $(this).attr('class')
		$('#bigimg').attr('src', ($(this).attr('src')))
		$('#bigimg').data('image', current)
	})
	$('.right').click(function(){
		img_total = $(this).attr('id');
		img = $('#bigimg').data('image')
		if(img == img_total){
			img = 1
		}
		else{
			img ++
		}
		
		$('#bigimg').data('image',img)
		$('#bigimg').attr('src', $('.'+img).attr('src'))
	})
	$('.left').click(function(){
		img_total = $(this).attr('id');
		img = $('#bigimg').data('image')
		if(img == 1){
			img = img_total
		}
		else{
			img --
		}
		$('#bigimg').data('image',img)
		$('#bigimg').attr('src', $('.'+img).attr('src'))
	})
</script>